<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Stock Management</title>
   <style>
  body {
    margin: 0;
    font-family: 'Segoe UI', sans-serif;
    background-color: #f4f6f8;
    color: #333;
    max-width: 100%;
    overflow-x: hidden; /* prevent unwanted horizontal scroll */
  }

  .layout {
    display: flex;
    min-height: 100vh;
    overflow: hidden;
  }

  .content {
    flex: 1;
    padding: 30px;
    background-color: #fff;
  }

  .header-row {
    margin-bottom: 20px;
  }

  h2 {
    margin: 0;
    font-size: 24px;
    color: #1e1e2f;
  }

  .form-section {
    position: relative;
    left: 256px;
    width: 80%;
    margin-bottom: 40px;
    background: #fdfdfd;
    padding: 20px;
    border: 1px solid #e1e1e1;
    border-radius: 10px;
  }

  form {
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
    align-items: baseline;
    justify-content: center;
  }

  select,
  input[type='number'] {
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 8px;
    min-width: 180px;
    flex: 1 1 auto;
  }

  button {
    padding: 10px 20px;
    background-color:black;
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background 0.3s;
  }

  button:hover {
    background-color: #357abd;
  }

  button.danger {
    background-color: #e74c3c;
  }

  button.danger:hover {
    background-color: #c0392b;
  }

  .card {
    position: relative;
    left: 256px;
    background-color: white;
    border-radius: 10px;
    padding: 20px;
    border: 1px solid #e1e1e1;
    width: 80%; /* make it responsive */
    overflow-x: auto; /* allow table scroll if content is too wide */
  }

  table {
    width: 100%;
    border-collapse: collapse;
    font-size: 15px;
    min-width: 800px; /* to keep table readable on small screens */
  }

  th,
  td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #ddd;
  }

  th {
    background-color: #f0f0f0;
    color: #333;
  }

  tr:hover {
    background-color: #f9f9f9;
  }

  .empty-message {
    text-align: center;
    padding: 20px;
    color: #999;
    font-style: italic;
  }
.header-row{
  display: flex;
  align-items: center;
  justify-content: center;
}
  footer {
    text-align: center;
    padding: 15px;
    font-size: 14px;
    background-color: #f0f0f0;
    margin-top: 30px;
    color: #666;
  }
</style>

  </head>
  <body>
    <%- include('partials/adminheader') %>
    <div class="layout">
      <%- include('partials/sidebar') %>
      <% if (typeof success !== 'undefined' && success) { %>
        toastr.success("<%= success %>");
      <% } %>
      <% if (typeof error !== 'undefined' && error) { %>
        toastr.error("<%= error %>");
      <% } %>
      <main class="content">
        <div class="header-row">
          <h2 id="form-title">Add Stock</h2>
        </div>

        <div class="form-section">
          <form id="stock-form" action="/admin/stocks/add" method="POST">
            <select name="product" id="product" required>
              <option value="">Select Product</option>
              <% if (products && products.length > 0) { %> <%
              products.forEach(product => { %>
              <option value="<%= product._id %>">
                <%= product.productName %>
              </option>
              <% }) %> <% } %>
            </select>

            <input
              type="number"
              min="0"
              name="quantity"
              id="quantity"
              placeholder="Quantity"
              required
            />
            <input
              type="hidden"
              name="_method"
              id="method-field"
              value="POST"
            />
            <input
              type="number"
              name="price"
              id="price"
              placeholder="Price"
              step="0.01"
              required
            />

            <button type="submit" id="submit-btn">Add Stock</button>
            <button
              type="button"
              id="cancel-btn"
              onclick="resetForm()"
              style="display: none"
            >
              Cancel
            </button>
          </form>
        </div>

        <div class="header-row">
          <h2>Stock List</h2>
        </div>

        <div class="card">
          <table>
           <thead>
  <tr>
    <th>Sr.No</th>
    <th>Product</th>
    <th>Quantity</th>
    <th>Date</th>
    <th>Added By</th>
    <th>Price</th>
    <th>History</th>
    <th>Actions</th> 
  </tr>
</thead>
<tbody>
  <% if (stocks && stocks.length > 0) { %>
    <% stocks.forEach((stock, index) => { %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= stock.product?.productName || 'N/A' %></td>
        <td><%= stock.quantity %></td>
        <td><%= stock.createdAt.toDateString() %></td>
        <td><%= stock.addedBy || 'N/A' %></td>
        <td>â‚¹<%= stock.price || '0.00' %></td>
        <td>
          <form action="/admin/history/<%= stock.product?._id %>" method="GET">
            <button type="submit" class="btn btn-success">View</button>
          </form>
        </td>
        <td>
          <% if (stock.product) { %>
            <button
              onclick="editStock('<%= stock._id %>', '<%= stock.product._id %>', '<%= stock.quantity %>', '<%= stock.price %>')"
            >
              Edit
            </button>
          <% } else { %>
            <span>Product not available</span>
          <% } %>

          <form
            action="/admin/stocks/delete/<%= stock._id %>"
            method="POST"
            onsubmit="return confirm('Delete this stock?');"
            style="display: inline"
          >
            <button type="submit" class="danger">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  <% } else { %>
    <tr>
      <td colspan="8" class="empty-message">No stock records found</td>
    </tr>
  <% } %>
</tbody>


          </table>
        </div>
      </main>
    </div>

    <script>
      function editStock(id, productId, quantity, price) {
        document.getElementById('product').value = productId;
        document.getElementById('quantity').value = quantity;
        document.getElementById('price').value = price;
        document.getElementById(
          'stock-form'
        ).action = `/admin/stocks/update/${id}`;
        document.getElementById('submit-btn').textContent = 'Update Stock';
        document.getElementById('cancel-btn').style.display = 'inline-block';
        document.getElementById('form-title').textContent = 'Update Stock';
      }

      function resetForm() {
        const form = document.getElementById('stock-form');
        form.reset();
        form.action = '/admin/stocks/add';
        document.getElementById('submit-btn').textContent = 'Add Stock';
        document.getElementById('cancel-btn').style.display = 'none';
        document.getElementById('form-title').textContent = 'Add Stock';
      }
    </script>

    <%- include('partials/footer') %>
  </body>
</html>
