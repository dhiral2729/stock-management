<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <style>
    .user-form-card {
      background-color: #fff;
      margin: 60px auto 30px auto;
      padding: 40px 30px;
      max-width: 700px;
      border-radius: 16px;
      box-shadow: 0 6px 18px rgba(0, 0, 0, 0.07);
    }

    .form-title {
      text-align: center;
      font-size: 1.8rem;
      margin-bottom: 30px;
      color: #1e1e2f;
    }

    .user-form {
      display: flex;
      flex-direction: column;
      gap: 25px;
    }

    .user-form .form-group {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
    }

    .user-form input,
    .user-form select {
      flex: 1 1 48%;
      padding: 14px;
      border: 1px solid #ccc;
      border-radius: 8px;
      background-color: #fafafa;
      font-size: 1rem;
      transition: border 0.3s;
    }

    .user-form input:focus,
    .user-form select:focus {
      border-color: #1e1e2f;
      outline: none;
    }

    .user-form .form-button {
      text-align: center;
    }

    .user-form button {
      padding: 14px 40px;
      background-color: #1e1e2f;
      color: white;
      font-weight: bold;
      font-size: 1rem;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background 0.3s;
    }

    .user-form button:hover {
      background-color: #34344a;
    }
    .user-table-card {
      margin: 20px auto;
      padding: 30px;
      max-width: 1000px;
      background-color: #fff;
      border-radius: 16px;
      box-shadow: 0 6px 18px rgba(0, 0, 0, 0.07);
    }

    .table-title {
      text-align: center;
      font-size: 1.6rem;
      color: #1e1e2f;
      margin-bottom: 25px;
    }

    .user-table {
      width: 100%;
      border-collapse: collapse;
      font-size: 0.95rem;
    }

    .user-table thead {
      background-color: #1e1e2f;
      color: #fff;
    }

    .user-table th,
    .user-table td {
      padding: 14px 12px;
      border-bottom: 1px solid #e0e0e0;
      text-align: center;
    }

    .user-table tbody tr:hover {
      background-color: #f9f9f9;
    }

    .action-buttons form {
      display: inline;
    }

    .action-buttons button {
      background-color: #dc3545;
      color: white;
      padding: 8px 16px;
      font-size: 0.85rem;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .action-buttons button:hover {
      background-color: #c82333;
    }

    /* Responsive table */
    @media (max-width: 768px) {
      .user-table-card {
        padding: 20px 15px;
      }

      .user-table th,
      .user-table td {
        font-size: 0.85rem;
        padding: 10px;
      }

      .action-buttons button {
        padding: 6px 12px;
      }
    }

    /* Mobile Responsive */
    @media (max-width: 600px) {
      .user-form .form-group {
        flex-direction: column;
      }

      .user-form input,
      .user-form select {
        flex: 1 1 100%;
      }
    }
  </style>
  <body>
    <%- include('partials/adminheader') %> <%- include('partials/sidebar') %>

    <!-- Create User Card -->
    <!-- Create User Card -->
    <div class="card user-form-card">
      <h3>Create New User</h3>
      <form action="/admin/users" method="POST" class="user-form">
        <div class="form-group">
          <input
            type="text"
            name="name"
            placeholder="Enter Full Name"
            required
          />
          <input
            type="email"
            name="email"
            placeholder="Enter Email Address"
            required
          />
        </div>
        <div class="form-group">
          <input
            type="password"
            name="password"
            placeholder="Enter Password"
            required
          />
          <select name="role" required>
            <option value="">Select Role</option>
            <option value="user">User</option>
          </select>
        </div>
        <div class="form-button">
          <button type="submit">Create User</button>
        </div>
      </form>
    </div>

    <!-- User List Card -->
    <div class="card user-table-card">
      <h2 class="table-title">User List</h2>
      <table class="user-table">
        <thead>
          <tr>
            <th>Sr. No</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach((user, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td class="action-buttons">
              <form
                action="/admin/users/<%= user._id %>"
                method="POST"
                onsubmit="return confirm('Delete user?')"
              >
                <button type="submit">Delete</button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <%- include('partials/footer') %>
  </body>
</html>
