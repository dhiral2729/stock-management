<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Dashboard</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/styles.css" />
    <script
      src="https://kit.fontawesome.com/a076d05399.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <%- include('partials/header') %> <%- include('partials/usersidebar') %>
    <div class="main" style="display:flex; justify-content: center; align-items: center; max-width: 950px; position: relative; left: 290px;">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Sr No.</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Date</th>
            <th>Added By</th>
            <th>Price</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% stocks.forEach((stock, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
            <td><%= stock.product.productName || 'N/A' %></td>
            <td><%= stock.quantity %></td>
            <td><%= stock.createdAt.toDateString() %></td>
            <td><%= stock.addedBy %></td>
            <td><%= stock.price %></td>
            <td>
              <form action="/user/buy/<%= stock.product._id %>" method="GET">
                <button class="btn btn-sm btn-primary">Buy</button>
              </form>
            </td>
         
            

          </tr>
          <% }) %>
        </tbody>
      </table>

   

    <%- include('partials/footer') %>
  </body>
</html>
