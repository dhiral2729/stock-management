<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body>
    <%- include('partials/adminheader') %>

    <div class="d-flex">
        <%- include('partials/sidebar') %>

        <main class="main-content p-4 w-100">
            <h2 class="mb-3">Welcome, Admin!</h2>

            <!-- Dashboard Cards -->
            <div class="row">
                <div class="col-md-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-tags text-primary"></i> Categories</h5>
                            <p class="card-text">Manage Product Categories</p>
                            <a href="/admin/category" class="btn btn-outline-primary">Go to Categories</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-box text-success"></i> Products</h5>
                            <p class="card-text">View and Manage Products</p>
                            <a href="/admin/product" class="btn btn-outline-success">Go to Products</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-warehouse text-warning"></i> Stock</h5>
                            <p class="card-text">Update and Track Stock</p>
                            <a href="/admin/stocks/add" class="btn btn-outline-warning">Go to Stock</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-chart-line text-danger"></i> Reports</h5>
                            <p class="card-text">View Sales and Reports</p>
                            <a href="/admin/report" class="btn btn-outline-danger">View Reports</a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
